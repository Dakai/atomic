# Default colors
set color_win_fg=default
set color_win_bg=default
set color_win_dir=gray

# Top window title
set color_win_title_fg=black
set color_win_title_bg=gray

# Vertical separator
set color_separator=gray

# Bottom title line
set color_titleline_fg=black
set color_titleline_bg=gray

# Bottom status line
set color_statusline_fg=gray
set color_statusline_bg=default

# Bottom command line
set color_cmdline_fg=default
set color_cmdline_bg=default
set color_error=red
set color_info=yellow


# Currently playing track
#----------------------------------------------------------------

# Unselected
set color_win_cur=cyan

# Active selection
set color_win_cur_sel_fg=cyan
set color_win_cur_sel_bg=darkgray

# Inactive selection
set color_win_inactive_cur_sel_fg=gray
set color_win_inactive_cur_sel_bg=darkgray

# Non-playing tracks
#----------------------------------------------------------------

# Active selection
set color_win_sel_fg=green
set color_win_sel_bg=darkgray

# Inactive selection
set color_win_inactive_sel_fg=gray
set color_win_inactive_sel_bg=darkgray
